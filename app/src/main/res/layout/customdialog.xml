<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:text="제목"
            android:background="@drawable/label_black"/>

        <TextView
            android:id="@+id/type_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:text="타입"
            android:drawableRight="@drawable/ic_down"/>

        <RadioGroup
            android:id="@+id/type_group"
            android:layout_width="wrap_content"
            android:layout_height="38dip"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/label_white"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/type_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소형"/>
            <RadioButton
                android:id="@+id/type_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중형"/>

            <RadioButton
                android:id="@+id/type_submedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="준중형"/>
            <RadioButton
                android:id="@+id/type_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대형"/>
        </RadioGroup>

        <TextView
            android:id="@+id/mission_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:text="변속"
            android:drawableRight="@drawable/ic_down"/>

        <RadioGroup
            android:id="@+id/mission_group"
            android:layout_width="wrap_content"
            android:layout_height="38dip"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/label_white"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/mission_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자동"/>
            <RadioButton
                android:id="@+id/mission_passivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수동"/>

        </RadioGroup>

        <TextView
            android:id="@+id/fuel_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:textSize="20dp"
            android:text="연료"
            android:drawableRight="@drawable/ic_down"/>

        <RadioGroup
            android:id="@+id/fuel_group"
            android:layout_width="wrap_content"
            android:layout_height="38dip"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/label_white"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/fuel_gasoline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가솔린"/>
            <RadioButton
                android:id="@+id/fuel_diesel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="디젤"/>
        </RadioGroup>

        <TextView
            android:id="@+id/filter_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="필터 : "/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/leftSpacer"
                android:layout_weight="0.25"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" />
            <Button
                android:id="@+id/button1"
                android:layout_width="0dip"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="적용"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/button2"
                android:layout_width="0dip"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="취소"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/rightSpacer"
                android:layout_width="0dip"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>